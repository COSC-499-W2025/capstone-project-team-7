#root {
    background: $surface;
}

Header, Footer {
    background: $accent;
    color: $text;
}

#session-status {
    padding: 0 2;
    border: round $primary;
    background: $surface-lighten-1;
    margin-bottom: 1;
}

Horizontal#content {
    height: 1fr;
}

.panel {
    border: round $primary;
    padding: 1 2;
}

#sidebar {
    width: 32%;
    min-width: 24;
}

#menu ListItem.--highlight {
    background: $accent;
    color: $accent-lighten-3;
}

.panel-title {
    margin-bottom: 1;
    text-style: bold;
}

.menu-item {
    padding: 0 1;
}

.status {
    margin-top: 1;
    padding: 0 2;
    border: round $accent;
}

.status.info {
    background: $surface;
}

.status.warning {
    background: $warning;
    color: $text;
}

.status.error {
    background: $error;
    color: $text;
}

.status.success {
    background: $success;
    color: $text;
}

ScanConfigScreen {
    align: center middle;
}

.dialog {
    width: 60%;
    max-width: 60;
    border: round $primary;
    background: $surface-lighten-1;
    padding: 1 2;
}

.dialog-title {
    text-style: bold;
}

.dialog-subtitle {
    color: $text;
}

.dialog-message {
    color: $warning;
}

.dialog-buttons {
    padding-top: 1;
}

.dialog-buttons Button {
    margin-left: 1;
}

.consent-actions {
    padding-top: 1;
}

.consent-actions Button {
    margin-left: 0;
    margin-top: 1;
}

.consent-actions Button:first-child {
    margin-top: 0;
}

.preferences-dialog {
    width: 80%;
    max-width: 80;
}

.pref-column {
    width: 1fr;
}

.pref-column-left {
    padding-right: 1;
}

.pref-column-right {
    padding-left: 1;
}

#pref-profile-list {
    height: 16;
    border: round $primary;
    margin-bottom: 1;
}

.pref-column-left Button {
    margin-top: 1;
}

.pref-column-left Button:first-child {
    margin-top: 0;
}

.pref-column-right Checkbox {
    margin-top: 1;
}

.group-title {
    text-style: bold;
    margin-bottom: 1;
}

.dialog-message.info {
    color: $text;
}

.dialog-message.warning {
    color: $warning;
}

.dialog-message.error {
    color: $error;
}

.dialog-message.success {
    color: $success;
}

#notice-log {
    height: 18;
    border: round $primary;
    padding: 0 1;
    background: $surface;
}

.scan-results-dialog {
    width: 100%;
    height: 100%;
    max-width: 100%;
    max-height: 100%;
    border: none;
    padding: 0;
    overflow: hidden;
}

#scan-results-table {
    height: 1fr;
    min-height: 12;
    border: round $primary;
    padding: 0 1;
    background: $surface;
}

.scan-actions-container {
    height: auto;
    margin-top: 0;
    border: none;
    padding: 0 1;
    background: $surface-lighten-1;
    max-height: 6;
    overflow-y: auto;
}

.scan-actions-list {
    width: 100%;
    padding: 0;
}

.scan-actions-row {
    width: 100%;
    align-horizontal: center;
    padding-top: 0;
    margin-bottom: 0;
}

.scan-actions-row Button {
    margin: 0 1 0 0;
    min-width: 10;
    padding: 0 1;
    height: auto;
}

.file-detail-dialog {
    width: 80%;
    max-width: 80;
}

.file-detail-text {
    border: round $primary;
    padding: 1;
    background: $surface;
    max-height: 18;
    overflow-y: auto;
    text-wrap: wrap;
}
